@model PaymentVM
@{
	ViewData["eee"] = "hero-normal";
}

<link rel="stylesheet" href="~/css/cartStyle.css" />

<!-- Breadcrumb Section Begin -->
<section class="breadcrumb-section set-bg" data-setbg="/img/breadcrumb.jpg">
	<div class="container">
		<div class="row">
			<div class="col-lg-12 text-center">
				<div class="breadcrumb__text">
					<h2>Kargo</h2>
					<div class="breadcrumb__option">
						<a asp-action="Index" asp-controller="Home">Home</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>
<!-- Breadcrumb Section End -->
<!-- Shoping Cart Section Begin -->
<section class="shoping-cart spad">

	<div class="container">
		<div class="row">
			<div class="col-lg-12">


				@if (ViewBag.OrderNumber != null)
				{
					<h1>@ViewBag.OrderNumber</h1>
				}
				else
				{
					<div asp-validation-summary="ModelOnly" class="text-danger"></div>

					<div class="padding">
						<div class="row">
							<div class="col-sm-6">
								<div class="card">
									<div class="card-header">
										<strong>Credit Card</strong>
										<small>enter your card details</small>
									</div>

									<form method="post">

										<div class="card-body">
											<div class="row">
												<div class="col-sm-12">
													<div class="form-group">



														<label for="name">Name</label>
														<input asp-for="Name" class="form-control" id="name" type="text" placeholder="Enter your name">
														<span class="text-danger" asp-validation-for="Name"></span>
													</div>
												</div>
											</div>

											<div class="row">
												<div class="col-sm-12">
													<div class="form-group">
														<label for="ccnumber">Credit Card Number</label>


														<div class="input-group">
															<input asp-for="CartNumber" class="form-control" type="text" placeholder="0000 0000 0000 0000" autocomplete="email">

															<div class="input-group-append">
																<span class="input-group-text">
																	<i class="mdi mdi-credit-card"></i>
																</span>
															</div>

															<span class="text-danger" asp-validation-for="CartNumber"></span>
														</div>
													</div>
												</div>
											</div>

											<div class="row">
												<div class="form-group col-sm-4">
													<label for="ccmonth">Month</label>
													<select asp-for="Month" class="form-control" id="ccmonth">
														<option>1</option>
														<option>2</option>
														<option>3</option>
														<option>4</option>
														<option>5</option>
														<option>6</option>
														<option>7</option>
														<option>8</option>
														<option>9</option>
														<option>10</option>
														<option>11</option>
														<option>12</option>
													</select>
													<span class="text-danger" asp-validation-for="Month"></span>
												</div>
												<div class="form-group col-sm-4">
													<label for="ccyear">Year</label>
													<select asp-for="Year" class="form-control" id="ccyear">
														<option>2014</option>
														<option>2015</option>
														<option>2016</option>
														<option>2017</option>
														<option>2018</option>
														<option>2019</option>
														<option>2020</option>
														<option>2021</option>
														<option>2022</option>
														<option>2023</option>
														<option>2024</option>
														<option>2025</option>
													</select>
													<span class="text-danger" asp-validation-for="Year"></span>

												</div>
												<div class="col-sm-4">
													<div class="form-group">
														<label for="cvv">CVV/CVC</label>
														<input asp-for="Cvv" class="form-control" id="cvv" type="text" placeholder="123">
														<span class="text-danger" asp-validation-for="Cvv"></span>
													</div>
												</div>
											</div>

										</div>
										<div class="card-footer">
											<button class="btn btn-sm btn-success float-right" type="submit">
												<i class="mdi mdi-gamepad-circle"></i> Ödeme Yap
											</button>
											<button class="btn btn-sm btn-danger" type="reset">
												<i class="mdi mdi-lock-reset"></i> Vazgeç
											</button>
										</div>

									</form>
								</div>
							</div>
						</div>
					</div>
				}





			</div>
		</div>
	</div>

</section>


@section Scripts{
	@await Html.PartialAsync("_ValidationScriptsPartial")
}
