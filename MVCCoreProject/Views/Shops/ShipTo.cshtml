@model List<Shippers>
@{
	ViewData["eee"] = "hero-normal";
}

<!-- Breadcrumb Section Begin -->
<section class="breadcrumb-section set-bg" data-setbg="/img/breadcrumb.jpg">
	<div class="container">
		<div class="row">
			<div class="col-lg-12 text-center">
				<div class="breadcrumb__text">
					<h2>Kargo</h2>
					<div class="breadcrumb__option">
						<a asp-action="Index" asp-controller="Home">Home</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>
<!-- Breadcrumb Section End -->
<!-- Shoping Cart Section Begin -->
<section class="shoping-cart spad">

	<div class="container">
		<div class="row">
			<div class="col-lg-12">
				<form method="post" id="frmShip">
					<select name="shipId" id="shipId">
						<option value="-1">Kargo Seçiniz</option>
						@foreach (var item in Model)
						{
							<option value="@item.ShippersId">@item.Company</option>
						}
					</select>
				</form>
			</div>
		</div>
	</div>

</section>
<!-- Shoping Cart Section End -->
@section Scripts{

	<script>

		$("#shipId").change(function() {

			var val = $(this).val();

			if (val == "-1") {
				return;
			}

			$("#frmShip").submit(); // formu submit yap...
		});

	</script>

}