@model MVCCoreProject.Models.AppUser


@{
	ViewData["eee"] = "hero-normal";
}

<!-- Breadcrumb Section Begin -->
<section class="breadcrumb-section set-bg" data-setbg="/img/breadcrumb.jpg">
	<div class="container">
		<div class="row">
			<div class="col-lg-12 text-center">
				<div class="breadcrumb__text">
					<h2>Üye Ol</h2>

				</div>
			</div>
		</div>
	</div>
</section>
<!-- Breadcrumb Section End -->


<section class="checkout spad">


	@if (ViewBag.Message != null)
	{
		<div class="alert alert-info">
			@ViewBag.Message
		</div>
	}

	<div class="container">
		<div class="row">
			<div class="col-md-4">
				<form asp-action="Register">
					<div asp-validation-summary="ModelOnly" class="text-danger"></div>
					<div class="form-group">
						<label asp-for="UserName" class="control-label"></label>
						<input readonly="true" asp-for="UserName" class="form-control" />
						<span asp-validation-for="UserName" class="text-danger"></span>
					</div>
					<div class="form-group">
						<label asp-for="FirstName" class="control-label"></label>
						<input asp-for="FirstName" class="form-control" />
						<span asp-validation-for="FirstName" class="text-danger"></span>
					</div>
					<div class="form-group">
						<label asp-for="LastName" class="control-label"></label>
						<input asp-for="LastName" class="form-control" />
						<span asp-validation-for="LastName" class="text-danger"></span>
					</div>

					<div class="form-group">
						<label asp-for="Email" class="control-label"></label>
						<input asp-for="Email" class="form-control" />
						<span asp-validation-for="Email" class="text-danger"></span>
					</div>

					<div class="form-group">
						<input type="submit" value="Güncelle" class="btn btn-primary" />
						<a class="btn btn-primary" asp-action="Adreslerim" asp-controller="Account">Adres Ekle</a>
				<a class="btn btn-primary" asp-action="ChangePassword" asp-controller="Account">Şifre Değiştir</a>

					</div>
					
				</form>

				

			</div>
		</div>

	</div>


</section>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
	}
